@model MusicLyrics.Models.AlbumViewModel

<h1>Create Album</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" asp-for="Album.Title" required />
    </div>

    <div class="form-group">
        <label for="ReleaseDate">Release Date</label>
        <input type="date" class="form-control" asp-for="Album.ReleaseDate" />
    </div>

    <div class="form-group">
        <label for="CoverImage">Cover Image URL</label>
        <input type="text" class="form-control" asp-for="Album.CoverImage" />
    </div>

    <div class="form-group">
        <label for="ArtistId">Artist</label>
        <select asp-for="Album.ArtistId" asp-items="Model.Artists" class="form-control" required>
            <option value="">Select an Artist</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
<a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
